<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/networkingFragment">

    <fragment
        android:id="@+id/networkingFragment"
        android:name="com.example.moshi.NetworkingFragment"
        android:label="NetworkingManagerFragment"
        tools:layout="@layout/networking_fragment" >
        <action
            android:id="@+id/action_networkingFragment_to_detail_fragment"
            app:destination="@id/detail_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="?android:attr/windowOverscan" />
    </fragment>

    <fragment
        android:id="@+id/detail_fragment"
        android:name="com.example.moshi.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/detail_fragment">
        <argument
            android:name="movie"
            app:argType="com.example.moshi.networking.movie.Movie" />
        <argument
            android:name="position"
            app:argType="integer" />
        <action
            android:id="@+id/action_detail_fragment_to_networkingFragment"
            app:destination="@id/networkingFragment" />
    </fragment>

</navigation>